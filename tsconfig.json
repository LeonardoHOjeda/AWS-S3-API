{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2016",
    
    /* Modules */
    "baseUrl": "./src",
    "module": "CommonJS",
    "moduleResolution": "node",
    "paths": {
      "@src/*": ["src/*"],
      "@modules/*": ["modules/*"],
      "@middlewares/*": ["middlewares/*"],
      "@config/*": ["config/*"],
    },
    "typeRoots": ["@types", "node_modules/@types"],

    /* Emit */
    "outDir": "./build",
    "rootDir": "./src",
    "sourceMap": true,

    /* Interop Constraint*/
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,

    "skipLibCheck": true
  },
  "include": ["src/**/*", "@types/index.d.ts"],
  "exclude": ["node_modules", "build"]
}